generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sqlite.db"
}

model tb_user {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  email      String   @unique
  password   String
  nickname   String?
  avatar     String?
  bio        String?
  role       String   @default("user")
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
