// sys_role_menu (角色-菜单关联表): role_id 关联 sys_role.id, menu_id 关联 sys_menu.id (定义角色权限)。

model sys_depart {
  id        Int     @id @default(autoincrement())
  name      String
  is_depart Boolean

  // 树状形结构
  parent_id Int?
  parent    sys_depart?  @relation("_self_sys_depart", fields: [parent_id], references: [id], onDelete: Cascade, onUpdate: Cascade) //自关联数据
  children  sys_depart[] @relation("_self_sys_depart")
  // 关联
  sys_user  sys_user[] //关联-用户表
  sys_menu  sys_menu[] //关联-用户表
}
