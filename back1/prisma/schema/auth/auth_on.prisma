model role_on_permiss {
    id           Int          @id @default(autoincrement())
    auth_role    auth_role    @relation(fields: [role_id], references: [id])
    auth_permiss auth_permiss @relation(fields: [permiss_id], references: [id])
    role_id      Int
    permiss_id   Int
}

model role_on_user {
    id        Int       @id @default(autoincrement())
    auth_user auth_user @relation(fields: [user_id], references: [id])
    auth_role auth_role @relation(fields: [role_id], references: [id])
    user_id   Int
    role_id   Int

    @@unique([user_id, role_id]) // 添加唯一约束，防止重复分配
}
